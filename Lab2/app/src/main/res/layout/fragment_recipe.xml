<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.notifications.KcalFragment">

    <TextView
        android:id="@+id/text_notifications"
        android:layout_width="237dp"
        android:layout_height="53dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="72dp"
        android:text="Culinary recipes"
        android:textAlignment="center"
        android:textColor="@color/purple_700"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.985"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/chipsbutton"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="204dp"
        android:text="Chips"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_notifications" />

    <Button
        android:id="@+id/spaghettiButton"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="56dp"
        android:text="Spaghetti"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_notifications" />

    <RelativeLayout
        android:id="@+id/ChipsLayout"
        android:layout_width="382dp"
        android:layout_height="505dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chipsbutton">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="318dp"
            android:layout_height="246dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="28dp"
            android:layout_marginTop="11dp"
            android:background="@color/purple_500"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="153dp"
            android:layout_height="151dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/chips" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="149dp"
            android:layout_height="99dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="40dp"
            android:text="Ingredients :
                          - 6 large floury potatoes
                - 2 tbsp olive oil
                - 1 tsp celery salt
                - sea salt, to serve"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="147dp"
            android:layout_height="105dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="124dp"
            android:layout_marginEnd="42dp"
            android:text="Method :
                             Peel the potatoes and cut them into long chip Heat the oven to   200C/180CRoast for 45-50 mins. "
            android:textColor="@color/white" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/SpaghettiLayout"
        android:layout_width="382dp"
        android:layout_height="505dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chipsbutton">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="318dp"
            android:layout_height="246dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="28dp"
            android:layout_marginTop="11dp"
            android:background="@color/purple_500"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="153dp"
            android:layout_height="151dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/spaghetti" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="37dp"
            android:text="Ingredients:
                - 3 tbsp olive oil
                - 1 onion, chopped
                - 1 garlic cloves crushed
                - 400g tomatoes
                - 200g ground beef
                - 300g dried spaghetti
                - small bunch of parsley"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="302dp"
            android:layout_height="89dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="42dp"
            android:text="Method:
                Heat the oil in. Add the onion along with salt and fry for 10 mins. Add the garlic, and cook for a further minute.
Stir the tomatoes, ground beef, olive bring to simmer and cook, uncovered, for 15 mins.
Cook the spaghetti then drain and toss with the sauce and parsley. "
            android:textColor="@color/white"
            android:textSize="12dp" />
    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>